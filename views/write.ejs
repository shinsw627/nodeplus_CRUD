<!DOCTYPE html>
<html lang="en">
    <head>
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <link rel="icon" href="/static/favicon.ico" type="image/x-icon" />
        <link
            rel="shortcut icon"
            href="/static/favicon.ico"
            type="image/x-icon"
        />
        <!-- Bulma CSS -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
        />
        <!-- Bootstrap CSS -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
            integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
            crossorigin="anonymous"
        />
        <!-- Font Awesome CSS -->
        <link
            href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
            rel="stylesheet"
        />
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script
            src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
            integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
            crossorigin="anonymous"
        ></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.4.0/socket.io.js"></script>

        <link href="../static/mystyle.css" rel="stylesheet" />
        <script src="../static/api.js"></script>
        <title>글쓰기</title>
        <script>
            function getSelf(callback) {
                $.ajax({
                    type: 'GET',
                    url: '/api/users/me',
                    headers: {
                        authorization: `Bearer ${localStorage.getItem(
                            'token'
                        )}`,
                    },
                    success: function (response) {
                        callback(response.user)
                    },
                    error: function (xhr, status, error) {
                        if (status == 401) {
                            alert('로그인이 필요합니다.')
                        } else {
                            localStorage.clear()
                            alert('로그인 후 이용하세요.')
                        }
                        window.location.href = '/'
                    },
                })
            }
            $(document).ready(function () {
                getSelf(function (u) {
                    user = u
                })
            })

            //글쓰기
            function write_post() {
                const postId = Date.now()
                const userName = user.nickname
                const title = $('#postTitle').val()
                const content = $('#postContent').val()
                const contentPw = parseInt($('#postPw').val())
                let d = new Date()
                let localeDate = d.toLocaleDateString()
                let localeTime = d.toLocaleTimeString()
                const date = localeDate + '  ' + localeTime

                if (title == '') {
                    alert('제목을 입력하세요.')
                    return
                } else if (content == '') {
                    alert('글 내용을 입력하세요.')
                    return
                } else if (contentPw == '') {
                    alert('글 비밀번호를 입력하세요.')
                    return
                } else if (typeof contentPw != 'number') {
                    alert('비밀번호는 숫자 4자리만 입력하세요.')
                    return
                } else if (contentPw > 9999) {
                    alert('비밀번호는 숫자 4자리만 입력하세요.')
                    return
                } else {
                    $.ajax({
                        type: 'POST',
                        url: `/api/write`,
                        data: {
                            postId: postId,
                            nickname: userName,
                            title: title,
                            content: content,
                            contentPw: contentPw,
                            date: date,
                        },
                        success: function (response) {
                            if (response['result'] == 'success') {
                                alert('저장 완료')
                                location.href = '/board'
                            }
                        },
                    })
                }
            }
        </script>
    </head>
    <body>
        <!-- Just an image -->
        <nav class="navbar navbar-light bg-light">
            <a href="/board"><h5 class="navtitle">게시판</h5></a>
            <h5 class="navtitle">글쓰기</h5>
            <a class="navbar-brand" href="/">
                <img
                    src="https://i.pinimg.com/564x/b5/70/d8/b570d831b240df6c033a4e2f8d2b7740.jpg"
                    width="60"
                    height="60"
                    alt=""
                />
            </a>
            <button
                type="button"
                class="btn btn-outline-sparta"
                onclick="signOut()"
            >
                로그아웃하기
            </button>
        </nav>
        <div class="postbar" id="postload">
            <div class="post-modify">
                <div>
                    <label class="label">글제목</label
                    ><input
                        class="input is-info"
                        id="postTitle"
                        type="text"
                        placeholder="제목을 입력하세요"
                    />
                    <label class="label">비밀번호</label
                    ><input
                        class="input is-danger"
                        id="postPw"
                        type="number"
                        min="0"
                        max="9999"
                        maxlength="4"
                        placeholder="비밀번호 숫자만4자리"
                    />
                </div>
                <label class="label">내용</label>
                <textarea
                    class="textarea is-info"
                    id="postContent"
                    placeholder="내용을 입력하세요"
                ></textarea>
            </div>
            <button class="button is-black" onclick="write_post()">저장</button>
        </div>
    </body>
</html>
